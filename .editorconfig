;  http://editorconfig.org
root = true

[*]
indent_size = 2
indent_style = space
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = false
; insert_final_newline = true

[{Vagrant,Cap,Rake,Gem}file]
indent_size = 2

[*.{xml,json,toml,html,{z,}sh,y{a,}ml}]
indent_size = 2

[*.{md}]
indent_size = 4

[*.{py,rs,go}]
indent_size = 4

[*.{lua,vim}]
indent_size = 2
