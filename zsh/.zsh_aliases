alias eu='emoi upgrade'

# yabai, skhd
alias ybrestart='launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"'
alias skhdrestart='launchctl kickstart -k "gui/${UID}/homebrew.mxcl.skhd"'

