# docker
alias dkls='docker container ls'
alias dki='docker images'
alias dkrmi='docker rmi'
alias dks='docker container start $@'
alias dksp='docker container stop $@'
alias dke='docker exec -it $@'
alias psp='ps aux | grep $@ | grep -Ev grep'
