set blame-view	= id:yes,color file-name:auto author:abbreviated date:relative-compact line-number:yes,interval=1 text
set grep-view	= file-name:no line-number:yes,interval=1 text
set main-view	= line-number:yes,interval=5 id:no date:relative-compact author:abbreviated commit-title:yes,graph,refs,overflow=no
# set reflog-view	= line-number:no,interval=5 id:yes date:no author:no commit-title:yes,refs,overflow=no
set refs-view	= line-number:yes id:no date:no author:no ref commit-title
set stash-view	= line-number:no,interval=5 id:no date:default author:abbreviated commit-title
set status-view	= line-number:no,interval=5 status:short file-name
set tree-view	= line-number:no,interval=5 mode author:no file-size date:no id:no file-name

# custom config
set main-view-date = relative-compact
set main-view-author = abbreviated
set main-view-id = true
set ignore-case = yes
