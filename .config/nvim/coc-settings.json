{
  "session.directory": "~/.nvim/session",
  "session.saveOnVimLeave": true,

  "snippets.ultisnips.directories": [
    "~/.nvim/plugged/vim-odoo-snippets/UltiSnips"
  ],

  "list.source.tags.command": "ctags -R --languages=python",
  "list.source.mru.maxLength": 500,
  "list.source.files.args": ["--hidden", "--files"],
  "list.source.grep.args": ["-tpy", "-txml"],

  "explorer.git.enable": false,
  "explorer.position": "left",
  "explorer.floating.height": 30,
  "explorer.floating.width": 70,

  "signature.floatConfig": {
    "border": true
  },

  "suggest.floatConfig": {
    "border": true,
    "maxWidth": 60,
    "maxHeight": 50
  },

  "diagnostic.floatConfig": {
    "border": true,
    "maxWidth": 60
  },

  "options.editorconfig": true,

  "rome.bin": "~/.asdf/shims/rome",
  "coc.references.rootPatterns": [
    ".git",
    ".hg",
    ".projections.json",
    "pyproject.toml"
  ],
  "python.analysis.extraPaths": [
    "./odoo",
    "./addons",
    "./project"
  ],
  "git.enableGutters": true
}
