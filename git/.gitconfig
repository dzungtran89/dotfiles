  email = dungtd@trobz.com
[core]
  excludesfile = ~/.gitignore_global
  editor = vi
  quotePath = false
  commitGraph = true
; [pager]
;   diff = delta
;   log = delta
;   reflog = delta
;   show = delta
; [delta]
;   features = side-by-side decorations
;   whitespace-error-style = 22 reverse
;   line-numbers = true
; [delta "decorations"]
;   commit-decoration-style = bold yellow box ul
;   file-style = bold yellow ul
;   file-decoration-style = none
; [interactive]
;   diffFilter = delta --color-only
[color]
  ui = true
[gc]
  autoDetach = false
  writeCommitGraph = true
[pull]
  rebase = true
[rebase]
  autoStash = true
[web]
  browse = open
[mergetool]
  keepBackup = false
[mergetool "vimdiff"]
  cmd = vi -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[merge]
  tool = vimdiff
[alias]
  f = fetch
  p = pull
  b = branch
  c = clone
  r = remote
  s = status
  l = log
  m  = merge
  bs = bisect
  rb = rebase
  rs = reset
  cm = commit
  ca = commit --amend
  cf = commit --fixup
  co = checkout
  cp = cherry-pick
  lg = log --oneline
  last = log -1 HEAD --oneline
  pf = push -f
  ps = push
  mt = mergetool
  ; https://stackoverflow.com/a/11688523/472927
  st = "!f() { git stash show stash^{/$*} -p; }; f"
  sa = "!f() { git stash apply stash^{/$*}; }; f"
  ss = stash save
  sp = stash pop
  sl = stash list
  fp = format-patch
  sm = submodule
  si = status --ignore-submodules
  di = diff --ignore-submodules
[url "git@gitlab.trobz.com:"]
  insteadOf = glt:
[url "git@github.com:"]
  insteadOf = gh:
[receive]
  advertisePushOptions = true
[tig]
  line-graphics = no  # Disable graphics characters
  tab-size = 4        # Number of spaces per tab
  main-view-date = relative-compact
  main-view-author = abbreviated
  main-view-id = true
[tig "bind"]
  main = = !git commit --fixup=%(commit)
  main = <C-r> !git rebase --autosquash -i %(commit)
