#!/usr/bin/env sh

# regex that matches apps that will be float
apps='^(Docker Desktop|Steam|Contacts|Installer|Books|Pomotroid|Be Focused|Xcode|Problem Reporter|About This Mac|Preview|Calendar|Dictionary|Messages|Keychain Access|Maps|Mail|EasyRes|Dozer|Stats|Parallels Desktop|LICEcap|DBngin|TablePlus|IINA|The Unarchiver|AppCleaner|App Store|System Preferences|System Information|Monosnap|Creative Cloud|Activity Monitor)$'
stick_apps='^(FileZilla|TeamViewer|Microsoft Excel|WPS Office|Finder|Font Book)$'

yabai -m rule --add app="${stick_apps}" sticky=on layer=above manage=off
yabai -m rule --add app="${apps}" manage=off

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_placement             second_child
yabai -m config window_topmost               off
yabai -m config window_opacity               off
# yabai -m config window_opacity_duration      0.0
yabai -m config window_shadow                off
yabai -m config window_border                off
yabai -m config window_border_width          6
yabai -m config active_window_border_color   0xff775759
yabai -m config normal_window_border_color   0xff555555
yabai -m config insert_feedback_color        0xaad75f5f
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.70

yabai -m config auto_balance                 off
yabai -m config split_ratio                  0.50

yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  35
yabai -m config bottom_padding               10
yabai -m config left_padding                 10
yabai -m config right_padding                10
yabai -m config window_gap                   10

# yabai -m window --toggle border

##
# Custom
##

# Override gaps for space 2 only
# yabai -m config window_gap 3 --space 2
# yabai -m config --space 3 layout float

yabai -m signal --add event=window_focused action="sketchybar --trigger window_focus"

# float system preferences
#
echo "yabai configuration loaded.."
